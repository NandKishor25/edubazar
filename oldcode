<script>
$(document).ready(function () {
    // Global state to track which dropdown is currently active
    let activeDropdownState = {
        type: null, // 'video', 'flipbook', 'answer'
        placeholder: null, // jQuery object of the div holding the active dropdown
        selectedValues: {
            class_id: null,
            subject_id: null,
            chapter_id: null,
            lecture_id: null // Only relevant for 'video'
        }
    };

    // --- Master Trigger for All Media Icons ---
    $('.media-trigger').on('click', function (e) {
        e.preventDefault();

        const triggerType = $(this).data('type');
        const placeholderSelector = $(this).data('placeholder');
        const $placeholder = $(placeholderSelector);
        const $iconContainer = $(this); // The <a> tag itself holds the image and is part of the icon-overlay

        // If clicking the currently active icon, toggle it off
        if (activeDropdownState.type === triggerType && $placeholder.is(':visible')) {
            resetMediaSelectionArea();
            return;
        }

        // Reset any previously active dropdown area
        resetMediaSelectionArea();

        // Set the new active state
        activeDropdownState.type = triggerType;
        activeDropdownState.placeholder = $placeholder;
        // Reset selections for the new active dropdown
        activeDropdownState.selectedValues = {
            class_id: null,
            subject_id: null,
            chapter_id: null,
            lecture_id: null
        };

        // Hide the original icon image, but keep its parent (the <a> tag) for positioning
        $iconContainer.find('img').hide();

        // Clone the universal dropdown template
        const $dropdownClone = $('#universalDropdownMenuTemplate').clone();
        $dropdownClone.removeAttr('id').attr('id', 'activeMediaDropdown').show(); // Assign a unique ID for the active clone

        // Show/hide 'Lecture Type' based on media type
        if (activeDropdownState.type === 'video') {
            $dropdownClone.find('.lecture-type-menu-item').show();
        } else {
            $dropdownClone.find('.lecture-type-menu-item').hide();
        }

        activeDropdownState.placeholder.html($dropdownClone);
        initializeUniversalDropdown($dropdownClone, activeDropdownState.selectedValues, activeDropdownState.type);
    });

    // --- Function to Reset Any Active Media Selection UI ---
    function resetMediaSelectionArea() {
        if (activeDropdownState.placeholder) {
            activeDropdownState.placeholder.empty(); // Clear the dropdown content
        }
        // Show all original icons
        $('#flipbookIcon').show();
        $('#videoIcon').show();
        $('#answerIcon').show();

        // Hide any open modals and clear their content if applicable
        $('.video-backdrop').fadeOut(function() { $('#videoContentArea').empty(); });
        $('#flipModal').modal('hide');
        $('#answerModal').modal('hide');
        $('#flipModal .showflip').html('<div class="message-container"><p>Please make a selection to view the flipbook.</p></div>');
        $('#answerModal .showpdf').html('<div class="message-container"><p>Please make a selection to view the answer key.</p></div>');


        // Reset the global state
        activeDropdownState = {
            type: null,
            placeholder: null,
            selectedValues: {
                class_id: null,
                subject_id: null,
                chapter_id: null,
                lecture_id: null
            }
        };
    }

    // --- Universal Dropdown Initialization Function ---
    function initializeUniversalDropdown($dropdownInstance, selections, mediaType) {
        // Bind parent menu item clicks to open/close submenus
        $dropdownInstance.find('.menu-item > .parent-link').off('click').on('click', function (e) {
            e.preventDefault();
            const $parentLi = $(this).closest('.menu-item');
            $dropdownInstance.find('.menu-item').not($parentLi).removeClass('active'); // Close others
            $parentLi.toggleClass('active'); // Toggle current
        });

        // Bind submenu item clicks
        $dropdownInstance.find('.menu-subitem a').off('click').on('click', function (e) {
            e.preventDefault();
            const $this = $(this);
            const parentList = $this.closest('.sub-menu');
            const parentId = parentList.attr('id'); // e.g., 'menu_class_list_clone'
            parentList.find('a').removeClass('active');
            $this.addClass('active');

            // Update selections based on the clicked item
            if (parentId === 'menu_class_list_clone') {
                selections.class_id = $this.data('id');
                selections.subject_id = null;
                selections.chapter_id = null;
                selections.lecture_id = null;
                $dropdownInstance.find('#menu_subject_list_clone').html('<li class="menu-subitem"><a href="#0">Loading...</a></li>');
                $dropdownInstance.find('#menu_chapter_list_clone').html('<li class="menu-subitem"><a href="#0">Select Subject First</a></li>');
                $dropdownInstance.find('.menu-item').removeClass('active');
            } else if (parentId === 'menu_subject_list_clone') {
                selections.subject_id = $this.data('id');
                selections.chapter_id = null;
                selections.lecture_id = null;
                $dropdownInstance.find('#menu_chapter_list_clone').html('<li class="menu-subitem"><a href="#0">Loading...</a></li>');
                $dropdownInstance.find('.menu-item').removeClass('active');
            } else if (parentId === 'menu_chapter_list_clone') {
                selections.chapter_id = $this.data('id');
                selections.lecture_id = null;
                $dropdownInstance.find('.menu-item').removeClass('active');
            } else if (parentId === 'menu_lecture_list_clone') { // Only for video
                selections.lecture_id = $this.data('id');
                $dropdownInstance.find('.menu-item').removeClass('active');
            }

            // After selection, trigger dynamic loading for next level or content check
            handleDynamicDropdownLoad(parentId, $dropdownInstance, selections, mediaType);
            checkAndLoadMediaContent(mediaType, selections, $dropdownInstance);
        });

        // Initial dynamic load if selections are already present (e.g., after re-opening dropdown)
        if (selections.class_id && !selections.subject_id) {
             handleDynamicDropdownLoad('menu_class_list_clone', $dropdownInstance, selections, mediaType);
        }
        if (selections.subject_id && !selections.chapter_id) {
             handleDynamicDropdownLoad('menu_subject_list_clone', $dropdownInstance, selections, mediaType);
        }
    }


    // --- Dynamic Dropdown Population (Subjects, Chapters) ---
    function handleDynamicDropdownLoad(menuId, $dropdownInstance, selections, mediaType) {
        if (menuId === 'menu_class_list_clone') {
            const classId = selections.class_id;
            if (!classId) return;
            $.ajax({
                url: "{{ url('subjects') }}/" + classId,
                success: function(data) {
                    let html = '<li class="menu-subitem"><a href="#0">Select subject</a></li>';
                    if (data.length === 0) {
                        html = '<li class="menu-subitem"><a href="#0">No subjects found</a></li>';
                    } else {
                        data.forEach(function(item) {
                            html += `<li class="menu-subitem"><a href="#0" data-id="${item.id}">${item.name} [${item.book_name}]</a></li>`;
                        });
                    }
                    $dropdownInstance.find('#menu_subject_list_clone').html(html);
                    // Re-initialize dropdown to bind events to new items
                    initializeUniversalDropdown($dropdownInstance, selections, mediaType);
                },
                error: function() {
                    $dropdownInstance.find('#menu_subject_list_clone').html('<li class="menu-subitem"><a href="#0">Error loading subjects.</a></li>');
                    initializeUniversalDropdown($dropdownInstance, selections, mediaType);
                }
            });
        }
        if (menuId === 'menu_subject_list_clone') {
            const subjectId = selections.subject_id;
            if (!subjectId) return;
            $.ajax({
                url: "{{ url('chapters') }}/" + subjectId,
                success: function(data) {
                    let html = '<li class="menu-subitem"><a href="#0">Select chapter</a></li>';
                    if (data.length === 0) {
                        html = '<li class="menu-subitem"><a href="#0">No chapters found</a></li>';
                    } else {
                        data.forEach(function(item) {
                            html += `<li class="menu-subitem"><a href="#0" data-id="${item.id}">${item.name}</a></li>`;
                        });
                    }
                    $dropdownInstance.find('#menu_chapter_list_clone').html(html);
                    initializeUniversalDropdown($dropdownInstance, selections, mediaType);
                },
                error: function() {
                    $dropdownInstance.find('#menu_chapter_list_clone').html('<li class="menu-subitem"><a href="#0">Error loading chapters.</a></li>');
                    initializeUniversalDropdown($dropdownInstance, selections, mediaType);
                }
            });
        }
    }


    // --- Check and Load Media Content (Video, Flipbook, Answer Key) ---
    function checkAndLoadMediaContent(type, selections, $dropdownInstance) {
        const { class_id, subject_id, chapter_id, lecture_id } = selections;

        // Clear any previous messages in the dropdown itself
        $dropdownInstance.find('.no-media-message').remove();

        let url = '';
        let targetContentArea = '';
        let modalElement = null; // For Bootstrap modals like #flipModal or #answerModal

        if (type === 'video') {
            if (!class_id || !subject_id || !chapter_id || !lecture_id) return;
            url = "{{ url('videos') }}/" + chapter_id + "/" + lecture_id;
            targetContentArea = '#videoContentArea';
            modalElement = $('.video-backdrop'); // This is our custom modal backdrop
        } else if (type === 'flipbook') {
            if (!class_id || !subject_id || !chapter_id) return; // Lecture type not needed
            url = "{{ url('flipbooks') }}/" + chapter_id + "/1"; // Assuming a default lecture ID or format
            targetContentArea = '#flipModal .showflip';
            modalElement = $('#flipModal');
        } else if (type === 'answer') {
            if (!class_id || !subject_id || !chapter_id) return;
            url = "{{ url('pdf') }}/" + subject_id; // Your provided answer key code uses subject_id for PDF URL
            targetContentArea = '#answerModal .showpdf';
            modalElement = $('#answerModal');
        } else {
            return; // Unknown type
        }

        // Show loader
        if (modalElement && modalElement.find('.modal-loader').length) {
            modalElement.find('.modal-loader').show();
        }


        $.ajax({
            type: "GET",
            url: url,
            success: function(response) {
                // Hide loader
                if (modalElement && modalElement.find('.modal-loader').length) {
                    modalElement.find('.modal-loader').hide();
                }

                let contentHtml = '';
                if (response && (response.filename || response.length > 0)) { // Check for video array or single file
                    const mediaData = Array.isArray(response) ? response[0] : response; // Handle both array and single object response
                    const mediaUrl = mediaData.filename;
                    const mediaTitle = mediaData.fileheading || "Content";

                    if (type === 'video') {
                        contentHtml = `<h4 class="video-title">${mediaTitle}</h4>`;
                        if (mediaUrl.includes('youtube.com/') || mediaUrl.includes('youtu.be/')) {
                            const youtubeId = getYoutubeVideoId(mediaUrl);
                            if (youtubeId) {
                                contentHtml += `<iframe width="560" height="315" src="https://www.youtube.com/embed/${youtubeId}?autoplay=1" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>`;
                            } else {
                                contentHtml += `<p style="color: white;">Invalid YouTube URL. Could not extract ID.</p>`;
                            }
                        } else {
                            contentHtml += `<video controls autoplay width="560" height="315">
                                <source src="${mediaUrl}" type="video/mp4">
                                Your browser does not support the video tag.
                            </video>`;
                        }
                        $(targetContentArea).html(contentHtml);
                        modalElement.fadeIn(); // Show custom video modal

                        // Set up closing for custom video modal
                        $('.video-backdrop .close-btn, .video-backdrop').off('click').on('click', function(e) {
                            if ($(e.target).hasClass('close-btn') || $(e.target).hasClass('video-backdrop')) {
                                modalElement.fadeOut(function() {
                                    $(targetContentArea).empty(); // Clear content when hidden
                                });
                                resetMediaSelectionArea(); // Reset UI after successful video play and close
                            }
                        });

                    } else if (type === 'flipbook' || type === 'answer') {
                        let finalMediaUrl = mediaUrl;
                        if (type === 'answer') { // For answer key, prefix with public asset path as per your code
                            finalMediaUrl = "{{ asset('public') }}" + "/" + mediaUrl;
                        }

                        // Clear initial message
                        $(targetContentArea).find('.message-container').remove();
                        $(targetContentArea).find('.no-media-message').remove();

                        if (finalMediaUrl.endsWith('.pdf')) {
                            contentHtml = `<h6 class="${type}Title">${mediaTitle}</h6><iframe src="${finalMediaUrl}" frameborder="0"></iframe>`;
                        } else if (finalMediaUrl.match(/\.(jpg|jpeg|png|gif|svg)$/i)) { // Check for image extensions
                            contentHtml = `<h6 class="${type}Title">${mediaTitle}</h6><img src="${finalMediaUrl}" alt="${mediaTitle}">`;
                        } else {
                            contentHtml = `<h6 class="${type}Title">${mediaTitle}</h6><a href="${finalMediaUrl}" target="_blank">Click To Open File</a>`;
                            contentHtml += `<p class="no-media-message" style="color: orange;">Note: File format is not standard PDF/Image. Opening in new tab.</p>`;
                        }

                        $(targetContentArea).html(contentHtml);
                        modalElement.modal('show'); // Show Bootstrap modal

                        // Reset UI after Bootstrap modal closes
                        modalElement.off('hidden.bs.modal').on('hidden.bs.modal', function () {
                            resetMediaSelectionArea();
                        });
                    }
                } else {
                    // No media found for the current selection
                    displayNoMediaMessage($dropdownInstance, type);
                    // Hide loader if it was showing
                    if (modalElement && modalElement.find('.modal-loader').length) {
                        modalElement.find('.modal-loader').hide();
                    }
                }
            },
            error: function(xhr, status, error) {
                // Hide loader
                if (modalElement && modalElement.find('.modal-loader').length) {
                    modalElement.find('.modal-loader').hide();
                }
                console.error(`AJAX error loading ${type}:`, status, error, xhr.responseText);
                displayNoMediaMessage($dropdownInstance, type, true); // Pass true for error state
            }
        });
    }

    // Function to display "No media found" or "Error" message in the dropdown area
    function displayNoMediaMessage($dropdownInstance, type, isError = false) {
        let message = isError ? `Error loading ${type}. Please try again.` : `No ${type} found for this selection.`;
        // Remove existing messages first
        $dropdownInstance.find('.no-media-message').remove();
        $dropdownInstance.append(`<p class="no-media-message">${message}</p>`);
    }

    // Helper function to extract YouTube video ID from various URL formats
    function getYoutubeVideoId(url) {
        let videoId = null;
        const youtubeRegex = /(?:youtube\.com\/(?:[^\/]+\/.+\/|(?:v|e(?:mbed)?)\/|.*[?&]v=)|youtu\.be\/)([^"&?\/\s]{11})/;
        const match = url.match(youtubeRegex);
        if (match && match[1]) {
            videoId = match[1];
        }
        return videoId;
    }
});
</script>
